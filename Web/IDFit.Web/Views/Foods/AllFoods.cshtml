@model IDFit.Web.ViewModels.Foods.AllFoodsViewModel
@{
    this.ViewData["Title"] = $"All Foods";
}

<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
</div>
<div class="card-body">
    <a class="btn btn-primary badge-pill" asp-controller="Foods" asp-action="CreateFood" role="button">Add Food</a>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Grams</th>
                <th>Quantity</th>
                <th>Options</th>
            </tr>
        </thead>
        @foreach (var food in Model.Foods)
        {
            <tbody>
                <tr class="table-info">
                    <td>@food.Name</td>
                    <td>@food.Weight grams</td>
                    <td>@food.Quantity pieces</td>
                    <td>
                        <form asp-controller="Foods" asp-action="DeleteFood" asp-route-id="@food.Id" method="post">
                            <a asp-controller="Foods" asp-action="EditFood" asp-route-id="@food.Id" class="btn btn-primary badge-pill">Edit</a>
                            <button type="submit" class="btn btn-danger badge-pill">Delete</button>
                        </form>
                    </td>
                </tr>
            </tbody>
        }
    </table>
</div>
<a class="btn btn-secondary badge-pill" asp-controller="Home" asp-action="Index" role="button">Cancel</a>




