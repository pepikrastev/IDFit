@model List<IDFit.Web.ViewModels.Trainings.ExerciseForListViewModel>
@{
    var trainingId = ViewBag.trainingId;
    var trainingName = ViewBag.trainingName;
    this.ViewData["Title"] = $"Add or remove exercise for training {trainingName} ";
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>@this.ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].Id" />
                    <input type="hidden" asp-for="@Model[i].Name" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                       name: @Model[i].Name - @Model[i].Description - @Model[i].ToolsCount tools
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
            <a asp-action="EditTraining" asp-controller="Trainings" asp-route-id="@trainingId" class="btn  btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>

