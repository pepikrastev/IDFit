@model IDFit.Web.ViewModels.Trainings.EditTrainingViewModel
@{
    this.ViewData["Title"] = $"Edit Training";
}

<h1>@this.ViewData["Title"]</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="@Model.Id" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Name" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Name" class="form-control" />
            <span asp-validation-for="@Model.Name" class="text-dark"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Description" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Description" class="form-control" />
            <span asp-validation-for="@Model.Description" class="text-dark"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.TrainingTime" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.TrainingTime" class="form-control" />
            <span asp-validation-for="@Model.TrainingTime" class="text-dark"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary badge-pill">Update</button>
            <a asp-action="AllTrainings" class="btn btn-secondary badge-pill">Cancel</a>
        </div>
    </div>

    <br />
    <br />
    <div class="card">
        <div class="card-header">
            <h3>Exercise for this training</h3>
        </div>
        <div class="card-body">
            @if (Model.Exercises.Any())
            {
                foreach (var exercise in Model.Exercises)
                {
                    if (exercise.Description != null)
                    {
                        <h5 class="card-title"><strong>@exercise.Name</strong> - <i style="color:black">@exercise.Description</i> - <strong>@exercise.ToolsCount</strong> tools</h5>
                    }
                    else
                    {
                        <h5 class="card-title"><strong>@exercise.Name</strong> - <strong>@exercise.ToolsCount</strong> tools</h5>
                    }

                }
            }
            else
            {
                <h5 class="card-title">There is no exercise</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="AddExerciseToTraining" asp-controller="Trainings" asp-route-trainingId="@Model.Id" class="btn  btn-primary" style="width:auto">Add or remove exercises</a>
        </div>
    </div>
</form>