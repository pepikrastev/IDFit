@model IDFit.Web.ViewModels.Users.AllUsersViewModel
@{
    this.ViewData["Title"] = "All Users";
}

<h1>@this.ViewData["Title"]</h1>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>User Name</th>
                <th>Id</th>
                <th>Options</th>
            </tr>
        </thead>
        @foreach (var user in Model.Users)
        {
            <tbody>
                <tr class="table-info">
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.UserName</td>
                    <td>@user.Id</td>
                    <td>
                        <a asp-controller="Users" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edit User</a>
                    </td>
                </tr>
            </tbody>
        }
    </table>
</div>