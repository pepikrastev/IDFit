@model IDFit.Web.ViewModels.Users.UserTrainingDetails
@{
    this.ViewData["Title"] = "Your's Trainig";
}


<div class="card-body">
    <center><h5 class="card-title">@Model.UserName</h5></center>
    <center><p class="card-text">@Model.Name</p></center>
</div>

<div class="card-body">
    <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between align-items-center">
            Destricption
            <span class="badge badge-primary badge-pill">@Model.Description</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            Training Time
            <span class="badge badge-primary badge-pill">@Model.TrainingTime</span>
        </li>
    </ul>
</div>


<div class="card-body">

    <div class="card-header">
        <center> <h3>Exercises</h3></center>
    </div>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Tools Count</th>
                </tr>
            </thead>
            @foreach (var exercise in Model.Exercises)
            {
                <tbody>
                    <tr class="table-info">
                        <td>@exercise.Name</td>
                        <td>@exercise.Description</td>
                        <td>@exercise.ToolsCount</td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
</div>

<br />
<div class="form-group row">
    <div class="col-sm-10">
        <a asp-controller="Users" asp-action="UserProfile" class="btn btn-secondary badge-pill">Cancel</a>
    </div>
</div>
