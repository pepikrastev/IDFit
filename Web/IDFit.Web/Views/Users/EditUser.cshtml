@model IDFit.Web.ViewModels.Users.EditUserViewModel
@{
    this.ViewData["Title"] = "Edti Profile";
}

<h1>@this.ViewData["Title"]</h1>

<form enctype="multipart/form-data" method="post" asp-controller="Users" asp-action="EditUser" class="mt-3">
    <div class="form-group row">
        <label asp-for="@Model.FirstName" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.FirstName" class="form-control" />
            <span asp-validation-for="@Model.FirstName" class="text-dark"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.LastName" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.LastName" class="form-control" />
            <span asp-validation-for="@Model.LastName" class="text-dark"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Photo" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-10">
            <div class=" custom-file">
                <input  asp-for="@Model.Photo" class="form-control custom-file-input" />
                <label class="custom-file-label">Choose File...</label>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Age" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Age" class="form-control" />
            <span asp-validation-for="@Model.Age" class="text-dark"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Description" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Description" class="form-control" />
            <span asp-validation-for="@Model.Description" class="text-dark"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.PhoneNumber" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.PhoneNumber" class="form-control" />
            <span asp-validation-for="@Model.PhoneNumber" class="text-dark"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary badge-pill">Update</button>
            <a asp-controller="Users" asp-action="UserProfile"  class="btn btn-secondary badge-pill">Cancel</a>
        </div>
    </div>

    @section Scripts{
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
                })
            });
        </script>
     }
</form>