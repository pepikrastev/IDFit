@model List<IDFit.Web.ViewModels.Coaches.TrainigForListViewModel>
@{
    var userId = ViewBag.userId;
    var userUsername = ViewBag.userUsername;
    this.ViewData["Title"] = $"Add or remove trainings for user - {userUsername} ";
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>@this.ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].Id" />
                    <input type="hidden" asp-for="@Model[i].Name" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                       - name: @Model[i].Name - @Model[i].Description - @Model[i].ExerciseCount exercises
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary badge-pill" style="width:auto" />
            <a asp-action="CoachUpdateHisUser" asp-controller="Coaches" asp-route-userId="@userId" class="btn  btn-secondary badge-pill" style="width:auto">Cancel</a>
        </div>
    </div>
</form>
