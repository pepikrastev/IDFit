@using IDFit.Common
@model IDFit.Web.ViewModels.Coaches.AllCoachesViewModel
@{
    this.ViewData["Title"] = $"Our Coaches!";

}

<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
</div>

<div class="row">
    @foreach (var coach in Model.Coaches)
    {
        var photoPath = "~/images/" + (coach.ImageUrl ?? "noimage.jpg");

    <div class="card m-2" style="min-width: 14rem; max-width:20%">
        @*@if (coach.ImageUrl != null)
        {*@
        <center>
            <img src="@photoPath" height="150" width="150" asp-append-version="true">
        </center>
        @*}*@
    <div class="card-body">
        <h5 class="card-title">@coach.FirstName @coach.LastName </h5>
        <p class="card-text">@coach.UserName</p>
        <p class="card-text">@coach.Description</p>
        <center >
            <a asp-controller="Coaches" asp-action="Coach" asp-route-id="@coach.Id" class="btn btn-primary">Details</a>
        </center>
        @*<a href="@coach.Url" asp-controller="Coaches" asp-action="Coach" asp-route-id="@coach.Id" class="btn btn-primary">Trainer</a>*@
    </div>
    </div>
    }
</div>