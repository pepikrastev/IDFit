@model IDFit.Web.ViewModels.Coaches.TrainedUserViewModel
@{
    this.ViewData["Title"] = $"Update your user";
    var photoPath = "~/images/" + (Model.ImageUrl ?? "noimage.jpg");
}

<div class="container">
    <div class="row">
        <div class="col-sm-2 col-md-2">
            <img src="@photoPath" width="200" height="150" alt="" class="img-rounded img-responsive" asp-append-version="true" />
        </div>
        <div class="col-sm-4 col-md-4">
            <blockquote>
                <p>@Model.FirstName @Model.LastName</p> <small><cite title="Source Title">@Model.UserName<i class="glyphicon glyphicon-map-marker"></i></cite></small>
            </blockquote>
            <p>
                <i class="glyphicon glyphicon-envelope"></i>@Model.Age age
                <br /> <i class="glyphicon glyphicon-globe"></i>(@Model.Description)
                <br /> <i class="glyphicon glyphicon-gift"></i> Coach: @Model.CoachUserName
            </p>
        </div>


        <div class="col-sm-2 col-md-4">
            @*<center>
                    <a class="btn btn-primary badge-pill">Edit Diet</a>
                </center>*@
            <br />
            @if (Model.Diet != null)
            {
                <p><a asp-controller="Coaches" asp-action="AddDietToUser" asp-route-userId="@Model.Id" class="btn-outline-primary"><strong>Edit It</strong></a></p>
                <p>
                    <i></i>Diet Name:<strong style="color:blue"> @Model.Diet.Name</strong> 
                    <br /> <i style="color:blue">@(Model.Diet.EndTime.Day - DateTime.UtcNow.Day)</i>  <i></i> Days Left
                    <br /> <i style="color:blue">@Model.Diet.Foods.Count</i>  <i></i> FoodsCount
                </p>
            }
            else
            {
                <p>@Model.FirstName @Model.LastName has no <a asp-controller="Coaches" asp-action="AddDietToUser" asp-route-userId="@Model.Id" class="btn-outline-primary">diet !</a></p>
            }
        </div>
    </div>

    <br />
    <div class="card-body">
        <a class="btn btn-primary badge-pill">Add Training</a>
        <a class="btn btn-secondary badge-pill" asp-area="" asp-controller="Users" asp-action="UserProfile">Cancel</a>
        <br />
        <br />
        <div class="card-header" style="background-color:lightblue">
            <center>
                <h3>User Trainings</h3>
            </center>
        </div>

        <ul class="list-group">
            <li class="list-group-item list-group-item-light">
                some
                <span>
                    <a asp-controller="Coaches" asp-action="CoachUpdateHisUser" class="badge badge-primary badge-pill" style="width:auto">Update</a>
                </span>
            </li>
            <li class="list-group-item list-group-item-light">
                some 2
                <span>
                    <a asp-controller="Coaches" asp-action="CoachUpdateHisUser" class="badge badge-primary badge-pill" style="width:auto">Update</a>
                </span>
            </li>
        </ul>
    </div>
</div>


