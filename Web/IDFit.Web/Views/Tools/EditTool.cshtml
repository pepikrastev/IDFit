@model IDFit.Web.ViewModels.Tools.ToolViewModel
@{
    this.ViewData["Title"] = $"Edit Tool";
}

<h1>@this.ViewData["Title"]</h1>

<form method="post" class="mt-3" enctype="multipart/form-data">
    <div class="form-group row">
        <label asp-for="@Model.Id" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Name" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Name" class="form-control" />
            <span asp-validation-for="@Model.Name" class="text-dark"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Details" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Details" class="form-control" />
            <span asp-validation-for="@Model.Details" class="text-dark"></span>
        </div>
    </div>
    @*<div class="form-group row">
            <label asp-for="@Model.ImageUrl" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="@Model.ImageUrl" class="form-control" />
                <span asp-validation-for="@Model.ImageUrl" class="text-dark"></span>
            </div>
        </div>*@

    <div class="form-group row">
        <label asp-for="@Model.Photo" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-10">
            <div class=" custom-file">
                <input asp-for="@Model.Photo" class="form-control custom-file-input" />
                <label class="custom-file-label">Choose File...</label>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary badge-pill">Update</button>
            <a asp-action="AllTools" class="btn btn-secondary badge-pill">Cancel</a>
        </div>
    </div>

</form>


@section Scripts{
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            })
        });
    </script>
}
