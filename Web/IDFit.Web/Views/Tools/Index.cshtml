@using IDFit.Common
@model IDFit.Web.ViewModels.Tools.IndexViewModel
@{
    this.ViewData["Title"] = $"Welcome to {GlobalConstants.SystemName}!";
}

<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>

</div>

<div class="row">

    @foreach (var tool in Model.Tools)
    {
        <div class="col-md-4 media">
            <img src="@tool.ImageUrl" width="100" class="mr-3" alt="@tool.Name">
            <div class="media-body">
                <h5 class="mt-0">@*<a href="@tool.Url">*@@tool.Name@*</a>*@</h5>
                @tool.Details
            </div>
        </div>
    }

</div>