@model IDFit.Web.ViewModels.Tools.ToolViewModel
@{
    this.ViewData["Title"] = $"Create Tool";
}

<h1>@this.ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"> </div>
            <div class="form-group">
                <label asp-for="@Model.Name"></label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Details"></label>
                <input asp-for="@Model.Details" class="form-control" />
                <span asp-validation-for="@Model.Details" class="text-danger"></span>
            </div>

            @*<div class="form-group">
                    <label asp-for="@Model.ImageUrl"></label>
                    <input asp-for="@Model.ImageUrl" class="form-control" />
                    <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
                </div>*@

            <div class="form-group row">
                <label asp-for="@Model.Photo" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-10">
                    <div class=" custom-file">
                        <input asp-for="@Model.Photo" class="form-control custom-file-input" />
                        <label class="custom-file-label">Choose File...</label>
                    </div>
                </div>
            </div>

            <button style="width:auto" type="submit" class="btn btn-primary badge-pill">Create Tool</button>
            <a class="btn btn-secondary badge-pill" asp-controller="Tools" asp-action="AllTools" role="button">Cancel</a>
        </form>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            })
        });
    </script>
}