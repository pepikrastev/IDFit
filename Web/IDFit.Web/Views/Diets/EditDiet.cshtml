@model IDFit.Web.ViewModels.Diets.EditDietViewModel
@{
    this.ViewData["Title"] = $"Edit Diet";
}

<h1>@this.ViewData["Title"]</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="@Model.Id" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Name" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Name" class="form-control" />
            <span asp-validation-for="@Model.Name" class="text-dark"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.StartTime" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.StartTime" class="form-control" />
            <span asp-validation-for="@Model.StartTime" class="text-dark"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.EndTime" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.EndTime" class="form-control" />
            <span asp-validation-for="@Model.EndTime" class="text-dark"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="AllDiets" class="btn btn-primary">Cancel</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>User with this diet</h3>
        </div>
        <div class="card-body">
            @if (Model.UsersUsersname.Any())
            {
                foreach (var username in Model.UsersUsersname)
                {
                    <h5 class="card-title">@username</h5>
                }
            }
            else
            {
                <h5 class="card-title">There is no user add to this diet!</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="EditUsersInDiet" asp-controller="Diets" asp-route-dietId="@Model.Id" class="btn  btn-primary" style="width:auto">Add or remove users</a>
        </div>
    </div>

</form>