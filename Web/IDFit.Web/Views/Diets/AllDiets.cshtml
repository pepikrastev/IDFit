@model IDFit.Web.ViewModels.Diets.AllDietsViewModel
@{
    this.ViewData["Title"] = $"All Diets";
}

<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
</div>
<div class="card-body">
    <a class="btn btn-primary badge-pill" asp-controller="Diets" asp-action="CreateDiet" role="button">Add Diet</a>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Days</th>
                <th>Foods Count</th>
                <th>Users Count</th>
                <th>Options</th>
            </tr>
        </thead>
        @foreach (var diet in Model.Diets)
        {
            <tbody>
                <tr class="table-info">
                    <td>@diet.Name</td>
                    <td>@diet.StartTime.Date.ToShortDateString()</td>
                    <td>@diet.EndTime.Date.ToShortDateString()</td>
                    <td>@diet.Days</td>
                    <td>@diet.Foods.Count()</td>
                    <td>@diet.Users.Count()</td>
                    <td>
                        <form asp-controller="Diets" asp-action="DeleteDiet" asp-route-id="@diet.Id" method="post">
                            <a asp-controller="Diets" asp-action="EditDiet" asp-route-id="@diet.Id" class="btn btn-primary badge-pill">Edit</a>
                            <button type="submit" class="btn btn-danger badge-pill">Delete</button>
                        </form>
                    </td>
                </tr>
            </tbody>
        }
    </table>
</div>
<a asp-controller="Home" asp-action="Index" class="btn btn-secondary badge-pill">Cancel</a>





