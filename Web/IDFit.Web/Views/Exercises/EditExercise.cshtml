@model IDFit.Web.ViewModels.Exercises.EditExerciseViewModel
@{
    this.ViewData["Title"] = $"Edit Exercise";
}

<h1>@this.ViewData["Title"]</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="@Model.Id" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Name" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Name" class="form-control" />
            <span asp-validation-for="@Model.Name" class="text-dark"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Description" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Description" class="form-control" />
            <span asp-validation-for="@Model.Description" class="text-dark"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="AllExercises" class="btn btn-primary">Cancel</a>
        </div>
    </div>

    <br />
    <br />
    <div class="card">
        <div class="card-header">
            <h3>Tools in this exercise</h3>
        </div>
        <div class="card-body">
            @if (Model.Tools.Any())
            {
                foreach (var tool in Model.Tools)
                {
                    <h5 class="card-title">@tool.Name - @tool.Details</h5>
                }
            }
            else
            {
                <h5 class="card-title">There is no tools for this exercise</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="AddToolsInExercise" asp-controller="Exercises" asp-route-exerciseId="@Model.Id" class="btn  btn-primary" style="width:auto">Add or remove tools</a>
        </div>
    </div>
</form>