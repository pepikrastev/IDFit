@model List<IDFit.Web.ViewModels.Exercises.ExerciseViewModel>
@{
    this.ViewData["Title"] = $"All Exercises";
}

<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
</div>
<div class="card-body">
    <a class="btn btn-primary" asp-controller="Exercises" asp-action="CreateExercise" role="button">Add Exercise</a>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Tools Count</th>
                <th>Options</th>
            </tr>
        </thead>
        @foreach (var exercise in Model)
        {
            if (exercise.Description != null)
            {
                <tbody>
                    <tr class="table-info">
                        <td>@exercise.Name</td>
                        <td>@exercise.Description</td>
                        <td>@exercise.ToolsCount</td>
                        <td>
                            <form asp-controller="Exercises" asp-action="DeleteExercise" asp-route-id="@exercise.Id" method="post">
                                <a asp-controller="Exercises" asp-action="EditExercise" asp-route-id="@exercise.Id" class="btn btn-primary badge-pill">Edit</a>
                                <button type="submit" class="btn btn-danger badge-pill">Delete</button>
                            </form>
                        </td>
                    </tr>
                </tbody>
            }
            else
            {
                <tbody>
                    <tr class="table-info">
                        <td>@exercise.Name</td>
                        <td>There is no description.</td>
                        <td>@exercise.ToolsCount</td>
                        <td>
                            <form asp-controller="Exercises" asp-action="DeleteExercise" asp-route-id="@exercise.Id" method="post">
                                <a asp-controller="Exercises" asp-action="EditExercise" asp-route-id="@exercise.Id" class="btn btn-primary badge-pill">Edit</a>
                                <button type="submit" class="btn btn-danger badge-pill">Delete</button>
                            </form>
                        </td>
                    </tr>
                </tbody>
            }

        }
    </table>
</div>
<a asp-controller="Home" asp-action="Index" class="btn btn-secondary badge-pill">Cancel</a>
