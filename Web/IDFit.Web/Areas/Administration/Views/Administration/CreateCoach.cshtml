@model IDFit.Web.ViewModels.Administration.Administration.AllUsersViewModel
@{
    this.ViewData["Title"] = "Create Coach";
}

<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
</div>

<div class="row">
    @foreach (var user in Model.Users)
    {
        <div class="card" style="width: 18rem;">
            <img src="@user.ImageUrl" class="card-img-top" alt="@user.UserName">
            <div class="card-body">
                <h5 class="card-title">@user.UserName"</h5>
                <a metod="post"  href ="/Administration/Administration/CreateCoach/@user.UserName" class="btn btn-primary">Create</a>
            </div>
        </div>
    }
</div>
